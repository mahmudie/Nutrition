@model  DataSystem.Models.GLM.FieldOption
@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Delete", "FieldOptions"))
        {
            @Html.HiddenFor(m => m.Id);

            <h5>Are you sure you want to delete this field option?</h5>
            <hr />

            <button type="submit" class="btn btn-danger float-right">Confirm Delete</button>
            <a asp-controller="Fields" asp-action="Edit" asp-route-id="@Model.FieldId" class="btn btn-light float-right">Cancel</a>
        }
    </div>
</div>