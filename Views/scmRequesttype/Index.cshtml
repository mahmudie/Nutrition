@{
    ViewData["Title"] = "Request Types";
}
<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h3>Request Types</h3>

            <ejs-grid id="Requesttype_Grid" allowSorting="true" toolbar="@(new List<string>() {"Add", "Edit", "Delete", "Cancel", "Update"})" allowPaging="true">
                <e-data-manager url="/scmRequesttype/UrlDataSource" adaptor="UrlAdaptor" insertUrl="/scmRequesttype/Insert" updateUrl="/scmRequesttype/Update" removeUrl="/scmRequesttype/Remove"></e-data-manager>
                <e-grid-editSettings allowAdding="true" allowDeleting="true" allowEditing="true" mode="Dialog"></e-grid-editSettings>
                <e-grid-columns>
                    <e-grid-column field="requesttypeId" headerText="ID" isPrimaryKey="true" visible="false" textAlign="Left" width="80"></e-grid-column>
                    <e-grid-column field="requesttypename" headerText="Request type" validationRules="@(new { required=true})" textAlign="Left" width="300"></e-grid-column>

                </e-grid-columns>
            </ejs-grid>

        </div>
    </div>
</div>