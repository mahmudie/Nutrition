@model IEnumerable<DataSystem.Models.TlkpFstock>

@{
    ViewData["Title"] = "MAM Stock Items";
}


<div class="container">
    <h2>MAM Stock Items</h2>

    <p>
        <a class="btn btn-success" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
    </p>
    <br />

        <table id="dt" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center" data-priority="1">
                       Item ID
                    </th>
                    <th class="text-center" data-priority="1">
                        @Html.DisplayNameFor(model => model.Item)
                    </th>

                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.DistAmountKg)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Buffer)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Zarib)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th class="text-center" data-priority="1">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            @Html.DisplayFor(modelItem => item.StockId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DistAmountKg)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Buffer)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Zarib)
                        </td>
                        <td>
                            @if (item.Active.Equals(true))
                            {
                                <span class="label label-success">Yes</span>
                            }
                            else
                            {
                                <span class="label label-danger">No</span>
                            }
                        </td>
                        <td>
                             <div style="display: inline-block; float: none; white-space: nowrap;">
                                     <a asp-action="Delete" asp-route-id="@item.StockId" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                                      | <a asp-action="Edit" asp-route-id="@item.StockId" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                             </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var table = $('#dt').DataTable({
                responsive: true,
            });
        });
    </script>
}