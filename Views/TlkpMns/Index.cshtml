@model IEnumerable<DataSystem.Models.TlkpMn>

@{
    ViewData["Title"] = "Growth Monitoring Items";
}
<div class="container">
    <h2>Growth Monitoring Items</h2>
    <p>
        <a class="btn btn-success" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
    </p>
        @if (Model.Any())
        {
            <table id="dt" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Mnid)
                        </th>
                        <th >
                            @Html.DisplayNameFor(model => model.Mnitems)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th data-priority="1" class="text-center">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mnid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mnitems)
                            </td>
                            <td class="text-center">
                                @if (item.Active.Equals(true))
                                {
                                    <span class="label label-success">Yes</span>

                                }
                                else
                                {
                                    <span class="label label-danger">No</span>
                                }

                            </td>
                            <td class="text-center">
                             <div style="display: inline-block; float: none; white-space: nowrap;">
                                     <a asp-action="Delete" asp-route-id="@item.Mnid" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                                      | <a asp-action="Edit" asp-route-id="@item.Mnid" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                             </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        { <div class="alert alert-info">No Record Available.</div> }
    </div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var table = $('#dt').DataTable({
                responsive: true,
                columnDefs: [
           { responsivePriority: 1, targets: 0 },
           { responsivePriority: 2, targets: -2 }
                ]
            });
        });
    </script>
}