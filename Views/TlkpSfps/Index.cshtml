@model IEnumerable<DataSystem.Models.TlkpSfp>

@{
    ViewData["Title"] = "MAM Beneficiaries Type";
}
<div class="container" style="padding-top:3em;">
    <h2>MAM Beneficiaries Type</h2>

    <p>
        <a class="btn btn-success" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
    </p>
    @if (Model.Any())
    {
        <table id="dt" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                   <th class="text-left">
                        Item ID
                    </th>
                    <th class="text-left">
                        @Html.DisplayNameFor(model => model.AgeGroup)
                    </th>
                    <th class="text-left">
                        @Html.DisplayNameFor(model => model.Active)
                    </th>

                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-Left">
                        <td>
                            @Html.DisplayFor(modelItem => item.Sfpid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AgeGroup)
                        </td>
                        <td>
                            @if (item.Active.Equals(true))
                            {
                                <span class="label label-success">Yes</span>
                            }
                            else
                            {
                                <span class="label label-danger">No</span>
                            }

                        </td>
                        <td>
                            <div style="display: inline-block;text-align:center; float: none; white-space: nowrap;">
                                     <a asp-action="Delete" asp-route-id="@item.Sfpid" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                                      | <a asp-action="Edit" asp-route-id="@item.Sfpid" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                             </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    { <div class="alert alert-info">No Record.</div>}
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#dt').DataTable({
                responsive: true,
                paging: false,
                "searching": false
        });
        });


    </script>
}