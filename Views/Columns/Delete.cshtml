@model  DataSystem.Models.GLM.Column
@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Delete", "Columns"))
        {
            @Html.HiddenFor(m => m.Id);

            <h5>Are you sure you want to delete this column?</h5>
            <hr />

            <button type="submit" class="btn btn-danger float-right">Confirm Delete</button>
            <a asp-controller="Columns" asp-action="Index" asp-route-SectionId="@Model.SectionId" class="btn btn-light float-right">Cancel</a>
        }
    </div>
</div>