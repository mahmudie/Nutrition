@model DataSystem.Models.SurveyInfovm

@{
    ViewData["Title"] = "Add Survey Details";
}
<div class="container-fluid">
    <h2>Add Survey Details</h2>

    <form asp-action="Create">
        <div class="row col-md-12">
            <table id="erfacilities" class="table table-condensed">
                <tr>
                    <th>
                        <label asp-for="SurveyAccro" class="control-label"></label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="SurveyAccro" class="form-control" />
                            <span asp-validation-for="SurveyAccro" class="text-danger" />
                        </div>
                    </td>
                    <th>
                        <label asp-for="SurveyFull" class="control-label"></label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="SurveyFull" class="form-control" />
                            <span asp-validation-for="SurveyFull" class="text-danger" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>
                        <label asp-for="StartDate" class="control-label">Survey Start Date</label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="StartDate" type="text" class="form-control" data-name="datepicker1" data-mddatetimepicker="true" data-targetselector="#StartDate"
                                   data-trigger="click" data-enabletimepicker="false" data-isgregorian="true" data-englishnumber="true" placeholder="Pick Start Date" />
                            <span asp-validation-for="StartDate" class="text-danger" />
                        </div>
                    </td>
                    <th>
                        <label asp-for="EndDate" class="control-label">Survey End Date</label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="EndDate" type="text" class="form-control" data-name="datepicker2" data-mddatetimepicker="true" data-targetselector="#EndDate"
                                   data-trigger="click" data-enabletimepicker="false" data-isgregorian="true" data-englishnumber="true" placeholder="Pick End Date" />
                            <span asp-validation-for="EndDate" class="text-danger" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>
                        <label asp-for="LeadBy" class=" control-label"></label>

                    </th>
                    <td>
                        <div>
                            <input asp-for="LeadBy" class="form-control" />
                            <span asp-validation-for="LeadBy" class="text-danger" />
                        </div>
                    </td>
                    <th>
                        <label asp-for="ImpBy" class="control-label"></label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="ImpBy" class="form-control" />
                            <span asp-validation-for="ImpBy" class="text-danger" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>
                        <label asp-for="SurveyYear" class="control-label"></label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="SurveyYear" class="form-control" />
                            <span asp-validation-for="SurveyYear" class="text-danger" />
                        </div>
                    </td>
                    <th>
                        <label asp-for="ReportLink" class="control-label"></label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="ReportLink" class="form-control" />
                            <span asp-validation-for="ReportLink" class="text-danger" />
                        </div>
                    </td>
                </tr>

                <tr>
                    <th>
                        <label asp-for="Writers" class="control-label">Author Names</label>

                    </th>
                    <td>
                        <div>
                            <input asp-for="Writers" class="form-control" />
                            <span asp-validation-for="Writers" class="text-danger" />
                        </div>
                    </td>
                    <th>
                        <label asp-for="Attachment" class="control-label"></label>
                    </th>
                    <td>
                        <div>
                            <input asp-for="Attachment" class="form-control" />
                            <span asp-validation-for="Attachment" class="text-danger" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <th colspan="4">
                        <label asp-for="Abstract" class="control-label"></label>
                    </th>
                </tr>
                <tr>
                    <td colspan="4">
                        <div>
                            <div class="form-group">
                                <ejs-richtexteditor ejs-for="Abstract" id="Abstract">
                                </ejs-richtexteditor>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <div class="col-lg-offset-2 col-md-6">
                    <input type="submit" value="Save" class="btn btn-block btn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <hr />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

    </script>
}
