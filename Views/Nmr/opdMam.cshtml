                                <td>
                                    <span class="label label-info" data-bind="text:total().sum[26]"></span>

                                </td>
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td colspan="2">SPHERE Standards</td>
                                <td>&gt;75%</td>
                                <td>&lt;3%</td>
                                <td>&lt;15%</td>
                                <td></td>
                                <td>&lt;15%</td>
                                <td colspan="4"></td>
                            </tr>
                        </tfoot>
                        <tbody data-bind="foreach: rep">
                            <tr class="text-center">
                                <td class="text-left" data-bind="text:ageGroup"></td>
                                <td data-bind="text:totalbegin"></td>
                                <td data-bind="text:zscore23"></td>
                                <td data-bind="text:muac12"></td>
                                <td data-bind="text:muac23"></td>
                                <td data-bind="text:tMale"></td>
                                <td data-bind="text:tFemale"></td>
                                <td data-bind="text:tMale+tFemale"> </td>
                                <td data-bind="text:referIn"> </td>
                                <td data-bind="text:tMale+tFemale+referIn"></td>
                                <td data-bind="text:absents"></td>
                                <td data-bind="text:cured"></td>
                                <td data-bind="text:deaths"></td>
                                <td data-bind="text:defaulters"></td>
                                <td data-bind="text:transfers"></td>
                                <td data-bind="text:nonCured"></td>
                                <td data-bind="text:transfers+nonCured+defaulters+deaths+cured"></td>
                                <td data-bind="text:(totalbegin+tMale+tFemale+referIn)-(transfers+defaulters+deaths+absents)"></td>
                                <td data-bind="text:(totalbegin+tMale+tFemale+referIn)-(cured+nonCured+transfers+defaulters+deaths)"></td>
                                <td>
                                    <div class="row" style="display: inline-block; float: none; white-space: nowrap;">
                                        <button class="btn btn-primary btn-xs" data-bind="click:$parent.edit,enable:$parent.enabled"><span class="glyphicon glyphicon-pencil"></span></button>                                        |
                                        <a class="btn btn-danger btn-xs" data-bind="click: $parent.delete"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
                <div style="display: none" data-bind="visible:checkNum()==0" class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button> There are no reports to display.

                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <form asp-action="Edit" data-bind="submit:partialRecord" class="form-horizontal">
                            <div class="col-sm-12 col-md-12 col-lg-12">
                                <table class="table table-condensed table-responsive text-center dt-responsive">
                                    <thead>
                                        <tr>
                                            <th>Average length-of-stay (ALS) for children only</th>
                                            <th>Average Weight Gain (AWG) for children only</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <input class="form-control text-center" asp-for="SfpAls" data-bind="textinput:partialForm.SfpAls" />
                                                <span asp-validation-for="SfpAls" class="text-danger" />
                                            </td>
                                            <td>
                                                <input class="form-control text-center" asp-for="SfpAwg" data-bind="textinput:partialForm.SfpAwg" />
                                                <span asp-validation-for="SfpAwg" class="text-danger" />
                                            </td>

                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <button id="send" type="submit" class="btn btn-sm btn-success">Save</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-6">
                        <form id="questions" class="form-horizontal">
                            <div class="form-horizontal">
                                <div class="col-sm-12 col-md-10 col-lg-12 ">
                                    <table class="table table-condensed table-responsive dt-responsive ">
                                        <thead>
                                            <tr>
                                                <th colspan="11">In OPD-MAM:</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td colspan="10">1- How many weeks did the site encountered stock out of RUSF?</td>
                                                <td>
                                                    <input asp-for="MamRusfstockoutWeeks" class="form-control text-center" data-bind="textinput:questions.MamRusfstockoutWeeks"/>
                                                    <span asp-validation-for="MamRusfstockoutWeeks" class="text-danger" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="10">2- Number of new admissions referred by CHWs?</td>
                                                <td>
                                                    <input asp-for="MamAddminsionByChws" class="form-control text-center" data-bind="textinput:questions.MamAddminsionByChws"/>
                                                     <span asp-validation-for="MamAddminsionByChws" class="text-danger" />                                                   
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <strong>Food stock report and balance (Kg)</strong>
                                <div class="clearfix"></div>
                            </div>
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table data-bind="visible:stocks().length!=0" class="table table-bordered table-hover table-condensed" style="font-size:12px;">
                                        <thead>
                                            <tr>
                                                <th>Food item</th>
                                                <th>Opening Balance</th>
                                                <th>Quantity Received</th>
                                                <th>Quantity Distributed</th>
                                                <th>Quantity Transferred Out</th>
                                                <th>Quantity Referred  In</th>                                                
                                                <th>Losses</th>
                                                <th>Quantity Returned</th>
                                                <th>Closing Balance</th>
                                                <th>Expected Recepients</th>
                                                <th>Need</th>
                                                <th class="text-center"> Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind="foreach:stocks">
                                            <tr>
                                                <td data-bind="text:item"></td>
                                                <td data-bind="text:openingBalance"></td>
                                                <td data-bind="text:quantityReceived"></td>
                                                <td data-bind="text:quantityDistributed"></td>
                                                <td data-bind="text:quantityTransferred"></td>
                                                <td data-bind="text:quantityReferin"></td>                                                
                                                <td data-bind="text:losses"></td>
                                                <td data-bind="text:quantityReturned"></td>
                                                <td data-bind="text:$parent.closingBalance($data)"></td>
                                                <td data-bind="text:expectedRecepients"></td>
                                                <td data-bind="text:$parent.stockAthand($data)"></td>
                                                <td class="text-center">
                                                    <div class="row" style="display: inline-block; float: none; white-space: nowrap;">
                                                        <button class="btn btn-primary btn-xs" data-bind="click:$parent.editStock,enable:$parent.enabledstock"><span class="glyphicon glyphicon-pencil"></span></button>
                                                        <a class="btn btn-danger btn-xs" data-bind="click: $parent.deleteStock"><span class="glyphicon glyphicon-trash"></span></a>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{ @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/notify.min.js"></script>
    <script src="~/js/ViewModel/opdmam.js"></script>
    <script>
        $(document).ready(function () {
            var model = new FormViewModel(@Json.Serialize(Model));
            ko.applyBindings(model);
        });
    </script>
    }