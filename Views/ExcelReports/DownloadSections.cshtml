@model  DataSystem.Models.GLM.ViewModels.ExcelReportsViewModel
@{
    ViewData["Title"] = "Excel Report";
}
<div class="card">
    <div class="card-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("DownloadSections", "ExcelReports"))
        {
            @Html.HiddenFor(m => m.ReportId)

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.SectionIds, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.SectionIds, new MultiSelectList(Model.Sections, "Id", "Title"), "", new { @class = "form-control", multiple = "multiple", size="14" })
                        @Html.ValidationMessageFor(m => m.SectionIds)
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-download"></span> Download
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>