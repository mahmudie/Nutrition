@model IEnumerable<DataSystem.Models.Provinces>

@{
    ViewData["Title"] = "Provinces";
}
<div class="container">
    <h2>Provinces</h2>

    <p>
        <a class="btn btn-success" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
    </p>
    <div class="table-responsive">
        @if (Model.Any())
        {
        <table id="dt" class="table table-striped table-bordered nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>

                        <th data-priority="1" class="text-center">
                            @Html.DisplayNameFor(m => m.ProvCode)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.ProvName)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.ProveNameDari)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.ProveNamePashto)
                        </th>
                         <th class="text-center">
                            @Html.DisplayNameFor(model => model.AIMSCode)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.AGHCHOCode)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th class="text-center" data-priority="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(m => item.ProvCode)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ProvName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ProveNameDari)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ProveNamePashto)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.AIMSCode)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.AGHCHOCode)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td class="text-center">
                                 <div style="display: inline-block; float: none; white-space: nowrap;">
                                     <a asp-action="Delete" asp-route-id="@item.ProvCode" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                                      | <a asp-action="Edit" asp-route-id="@item.ProvCode" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                                 </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        { <div class="alert alert-info">There Are No Record.</div>}
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#dt').DataTable({
                responsive: true,
                fixedHeader: true,
                 columnDefs: [ {
                     "targets": 6,
                     "sorting": false,
                     "orderable": false,
                     "render": function (data, type, row) {
                         if (data) {
                             var mDate = moment(data);
                             return (mDate && mDate.isValid()) ? mDate.format("DD/MM/YYYY") : "";
                         }
                         return "";
                     }
                 } ]
            });
        });
    </script>
}