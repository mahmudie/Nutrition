@model IEnumerable<DataSystem.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="card">
    <div class="card-header">
        @ViewData["Title"]

        <a asp-controller="Employee" asp-action="Create" class="btn btn-success btn-sm float-right">Add Employee</a>
    </div>

    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Attachment</th>
                    <th>Date Created</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var employee in Model)
                {
                <tr>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id">
                            @employee.FirstName @employee.LastName
                        </a>
                    </td>
                    <td>@employee.Email</td>
                    <td>
                        @if (employee.Attachment != null && employee.Attachment != "")
                        {
                            <a href="~/uploads/@employee.Attachment" class="btn btn-primary btn-sm">Download</a>
                        }
                    </td>
                    <td>@String.Format("{0:dd/MM/yyyy}", employee.DateCreated)</td>
                    
                    <td>
                        <a asp-controller="Home" 
                           asp-action="Delete" 
                           asp-route-id="@employee.Id" 
                           class="btn btn-danger btn-sm float-right">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>