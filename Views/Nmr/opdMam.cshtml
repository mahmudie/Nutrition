                                    <span class="label label-info" data-bind="text:total().sum[14]"></span>
                                </td>
                                <td>
                                    <span class="label label-info" data-bind="text:total().sum[15]"></span>
                                </td>
                                <td>
                                    <span class="label label-info" data-bind="text:total().sum[16]"></span>
                                </td>
