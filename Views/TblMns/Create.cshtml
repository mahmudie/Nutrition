@model DataSystem.Models.TblMn

@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<div class="modal fade" id="add" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn btn-danger btn-sm pull-right" data-dismiss="modal">Close</button>
                <h4 class="modal-title">Micronutrients Supplementation Reporting</h4>
            </div>
            <div class="modal-body ">
                <form asp-action="Create" id="form"  data-bind="submit:addFormPost">
                    <div class="form-horizontal">
                        <div class="form-group ">
                            <label asp-for="Mnid"  class="col-sm-2 control-label" ></label>
                            <div class="col-sm-5">
                                <select asp-for="Mnid" id="dropdown" class="form-control" asp-items="ViewBag.Mnid" data-bind="value:form.Mnid"></select>
                                <span asp-validation-for="Mnid" class="text-danger" />
                            </div>

                        </div>
                        <div class="form-group ">
                            <label asp-for="chu2m" class="col-sm-2 control-label"></label>
                            <div class="col-sm-3">
                                <input asp-for="chu2m" class="form-control" data-bind="textinput:form.chu2m,disable:dropdownText()==2||dropdownText()==4" />
                                <span asp-validation-for="chu2m" class="text-danger" />
                            </div>

                            <label asp-for="chu2f"  class="col-sm-2 control-label"></label>
                            <div class="col-sm-3">
                                <input asp-for="chu2f" class="form-control" data-bind="textinput:form.chu2f,disable:dropdownText()==1||dropdownText()==2||dropdownText()==4" />
                                <span asp-validation-for="chu2f" class="text-danger" />
                            </div>


                        </div>

                        <div class="form-group ">
                            <label asp-for="refbyCHW" class="col-sm-2 control-label"></label>
                            <div class="col-sm-3">
                                <input asp-for="refbyCHW" class="form-control" data-bind="textinput:form.refbyCHW,disable:dropdownText()==3" />
                                <span asp-validation-for="refbyCHW" class="text-danger" />
                            </div>
                            <label asp-for="Remarks" class="col-sm-2 control-label"></label>
                            <div class="col-sm-3">
                                <input asp-for="Remarks" class="form-control" data-bind="textinput:form.Remarks" />
                                <span asp-validation-for="Remarks" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group form-group-sm">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
  </div>

<script>
    $.validator.unobtrusive.parse($('#form'));
</script>