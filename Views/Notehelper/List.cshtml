@model IEnumerable<DataSystem.Models.Notehelpers>

@{
    ViewData["Title"] = "Note Helper";
}

@{
    <h3>@ViewData["Title"]<small></small></h3>
}
<p>
    <a class="btn btn-success" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Add New</a>

</p>
<table id="list" class="table table-bordered" cellspacing="0">

    <thead>
        <tr>
            <th>Id</th>
            <th>Form Name</th>
            <th>Section/Tab</th>
            <th>Section Code</th>
            <th>Tip/Note</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FormName</td>
                <td>@item.SectionName</td>
                <td>
                    <a asp-controller="Notehelper" asp-action="Edit" asp-route-id="@item.Id">
                        @item.SectionCode
                    </a>
                </td>
                <td>@Html.Raw(item.Tip)</td>

                <td>
                    <a asp-controller="Notehelper" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        @item.SectionCode
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $('#list').DataTable();
</script>