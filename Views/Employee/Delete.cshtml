@{
    ViewData["Title"] = "Delete Employee";
}

<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Delete", "Employee"))
        {
            <h5>Are you sure you want to delete this employee?</h5>
            <hr />

            <button type="submit" class="btn btn-danger float-right">Confirm Delete</button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-light float-right">Cancel</a>
        }
    </div>
</div>