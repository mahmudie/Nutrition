@{
    ViewData["Title"] = "Master Emails";
}
    <div class="container">
       
        <div class="row">
            <div class="col-md-12">
                <h3>Master Emails</h3>
                <br />
                <br />

            <ejs-grid id="EmailGrid"  allowSorting="true"  actionComplete="actionComplete"   toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Cancel", "Update" })" allowPaging="true">
                <e-data-manager url="/email/UrlDataSource"  adaptor="UrlAdaptor"  insertUrl="/email/Insert" updateUrl="/email/Update" removeUrl="/email/Remove" ></e-data-manager>
                <e-grid-editSettings allowAdding="true" allowDeleting="true" allowEditing="true" mode="Dialog"></e-grid-editSettings>
                <e-grid-columns>
                    <e-grid-column field="id" headerText="ID" allowEditing="false" isPrimaryKey="true" textAlign="Left" width="80"></e-grid-column>
                    <e-grid-column field="emailaccount" headerText="Email Account" validationRules="@(new { required=true})" textAlign="Left" width="150"></e-grid-column>
                    <e-grid-column field="smtp" headerText="SMTP Client" validationRules="@(new { required=true})" textAlign="Left" width="100"></e-grid-column>
                    <e-grid-column field="port" headerText="SMTP Port" validationRules="@(new { required=true})" textAlign="Left" width="100"></e-grid-column>
                    <e-grid-column field="issender" headerText="Is Sender" textAlign="Left" editType="booleanedit" type="Boolean" width="150"></e-grid-column>
                    <e-grid-column field="ssl" headerText="Is SSL"  defaultValue="1" textAlign="Left" editType="booleanedit" type="Boolean" width="150"></e-grid-column>
                    <e-grid-column field="isactive" defaultValue="1" headerText="Is Active" textAlign="Left" editType="booleanedit" type="Boolean" width="100"></e-grid-column>

                </e-grid-columns>
            </ejs-grid>
            </div>
        </div>
    </div>
@section Scripts{
}
<script>
    function actionComplete(args) {
        if ((args.requestType === 'beginEdit' || args.requestType === 'add')) {
            var dialog = args.dialog;
            dialog.width = 450;
            // change the header of the dialog
            dialog.header = args.requestType === 'beginEdit' ? 'Record of ' + args.rowData['emailaccount'] : 'New';
        }
    }

</script>