@model DataSystem.Models.ViewModels.QnrReview

@{
    ViewData["Title"] = "Verify";
}
<div class="container">
    @if(Model.StatusId!=3){
<button class="btn btn-success" data-toggle="modal" data-target="#verify">Verify</button>
  <div class="modal fade " id="verify" role="dialog">
    <div class="modal-dialog modal-lg">
     <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Verify Report</h4>
        </div>
        <div class="modal-body ">
                  <form asp-action="VerifyQnr" id="verifyForm">
                        <div class="form-horizontal">
                            <div class=" text-danger" asp-validation-summary="All"></div>
                            <input type="hidden" asp-for="Qnrid" />
          <div class="form-group">
            <label asp-for="StatusId" class="control-label col-xs-3"></label>
            <div class="col-xs-7">
                 <select asp-for="StatusId" id="Prov" class="form-control">
                    <option value="3">Accept</option>
                    <option value="4">Reject </option>
                 </select>
                  <span asp-validation-for="StatusId" class="text-danger" />            
            </div>
          </div>
          <div class="form-group">
            <label asp-for="message" class="control-label col-xs-3"></label>
            <div class="col-xs-7">
                <textarea asp-for="message" class="form-control"></textarea>
                <span asp-validation-for="message" class="text-danger" />
            </div>
          </div>
                        </div>
                    </form>        
                    </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-success pull-left" data-dismiss="modal">Close</button>
                <a onclick="event.preventDefault();document.getElementById('verifyForm').submit()" type="button" class="btn btn-success ">Save changes</a>
              </div>
      </div>
      
    </div>
  </div>
    }

        <div class="form-horizontal">
